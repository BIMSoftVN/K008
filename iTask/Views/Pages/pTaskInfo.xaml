            <StackPanel Margin="0,2" Orientation="Horizontal">
                <TextBlock
                    Width="100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="Tên" />

                <TextBox
                    Grid.Row="0"
                    Grid.Column="2"
                    Width="250"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="{Binding Task.Ten, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Margin="0,2" Orientation="Horizontal">
                <TextBlock
                    Width="100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="Mô tả" />

                <TextBox
                    Grid.Row="0"
                    Grid.Column="2"
                    Width="250"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="{Binding Task.MoTa, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Margin="0,2" Orientation="Horizontal">
                <TextBlock
                    Width="100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="Trạng thái" />

                <TextBox
                    Grid.Row="0"
                    Grid.Column="2"
                    Width="250"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="{Binding Task.TrangThai, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Margin="0,2" Orientation="Horizontal">
                <TextBlock
                    Width="100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="Ngày Tạo" />

                <dxe:DateEdit
                    Grid.Row="4"
                    Grid.Column="2"
                    Width="250"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontSize="14"
                    MaskType="DateOnly"
                    MaskUseAsDisplayFormat="True"
                    Text="{Binding Task.NgayTao, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Margin="0,2" Orientation="Horizontal">
                <TextBlock
                    Width="100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="Deadline" />

                <dxe:DateEdit
                    Grid.Row="4"
                    Grid.Column="2"
                    Width="250"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontSize="14"
                    MaskType="DateOnly"
                    MaskUseAsDisplayFormat="True"
                    Text="{Binding Task.Deadline, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Margin="0,2" Orientation="Horizontal">
                <TextBlock
                    Width="100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="Người giao" />

                <dxe:ComboBoxEdit
                    Grid.Row="4"
                    Grid.Column="2"
                    Width="250"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    DisplayMember="UserName"
                    FontSize="14"
                    ItemsSource="{Binding UserList}"
                    SelectedItem="{Binding Task.NguoiGiao, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <StackPanel Margin="0,2" Orientation="Horizontal">
                <TextBlock
                    Width="100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="Người Nhận" />

                <dxe:ComboBoxEdit
                    Grid.Row="4"
                    Grid.Column="2"
                    Width="250"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    DisplayMember="UserName"
                    FontSize="14"
                    ItemsSource="{Binding UserList}"
                    SelectedItem="{Binding Task.NguoiNhan, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>


